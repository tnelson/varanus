#!/bin/bash

OVS_PATH="$1"
OVS_INSTALL_PREFIX="$2"

if [[ -z ${OVS_PATH} || -z ${OVS_INSTALL_PREFIX} ]]; then
    echo "Usage:  ovs-init <path to ovs source> <ovs install prefix path>"
    exit 1
fi

# Initialize OVS configuration as given by ovs/INSTALL.md
mkdir -p ${OVS_INSTALL_PREFIX}/etc/openvswitch
ovsdb-tool create ${OVS_INSTALL_PREFIX}/etc/openvswitch/conf.db ${OVS_PATH}/vswitchd/vswitch.ovsschema
